@model Web.ViewModels.Posts.ListPostsViewModel

@{
    ViewBag.Title = "Post list";
}


<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create new post", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            Título
        </th>
        <th>
            Tags
        </th>
        <th>
            Fecha post
        </th>
      
        <th></th>

    </tr>

@foreach (var item in Model.ListaPosts) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
        </td>
        <td>
            @Html.ActionLink(item.Title, "Details", new {id = item.Id})

        </td>
        <td>
            @item.Tags
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>

    </tr>
}

</table>
